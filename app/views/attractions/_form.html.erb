<%= form_for @attraction do |f| %>
  <div class="form-group">
    <%= f.label :attraction %>
    <%= f.text_field :attraction %>
  </div>

  <div class="form_field">
    <%= f.label :activity_ids, "Activities:" %>
    <%= f.collection_check_boxes :activity_ids, Activity.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.submit %> 
  </div>          
<% end %>